<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Content="PEDIDOS DE RANGOS POR FECHA" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Fecha Inicio</Label>
                <TextBox x:Name="txtFechaInicio" Text="01/01/1990" />
                <Label>Fecha Fin</Label>
                <TextBox x:Name="txtFechaFin" Text="01/01/1990" />
                <Button x:Name="btnConsultar" Click="btnConsultar_Click">Consultar</Button>
            </StackPanel>
            <StackPanel>
                <DataGrid
                    Height="180px" x:Name="dgvPedido" AutoGenerateColumns="True"
                    GridLinesVisibility="Vertical" HeadersVisibility="All"
                    Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue"
                    BorderBrush="Gray" BorderThickness="5"
                    SelectionChanged="dgvPedido_SelectionChanged"></DataGrid>
            </StackPanel>
            <StackPanel>
                <Label Content="DETALLE DE PEDIDOS" />
            </StackPanel>
            <StackPanel>
                <DataGrid Height="100px" x:Name="dgvDetallePedido"
                          AutoGenerateColumns="False" GridLinesVisibility="Vertical" HeadersVisibility="All"
                          Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue"
                          BorderBrush="Gray" BorderThickness="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="IdPedido" Binding="{Binding Pedido.IdPedido}"/>
                        <DataGridTextColumn Header="IdProducto" Binding="{Binding IdProducto}"/>
                        <DataGridTextColumn Header="PrecioUnidad" Binding="{Binding Cantidad}"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding PrecioUnidad}"/>
                        <DataGridTextColumn Header="Descuento" Binding="{Binding Descuento}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="TOTAL"/>
                <TextBox x:Name="txtTotal" IsReadOnly="True"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
